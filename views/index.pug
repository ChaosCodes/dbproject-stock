extends layout

block content
  .demo-samples
    .login-form
      .sborder
        .icon
          img(src="resource/mine_fill.svg")
        |             
        .form-group
          input#login-name.form-control.login-field(type="text", value="", placeholder="Enter your name")
          |               
          label.login-field-icon.fui-user(for="login-name")
        |             
        .form-group
          input#login-pass.form-control.login-field(type="password", value="", placeholder="Password")
          |               
          label.login-field-icon.fui-lock(for="login-pass")
        |             
        a.btn.btn-primary.btn-lg.btn-block(href="#") Log in
        |             
        .login-link(href="#") Forgot your password?
